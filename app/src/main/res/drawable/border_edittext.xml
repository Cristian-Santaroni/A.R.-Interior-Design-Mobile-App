<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/transparent" /> <!-- Transparent background color -->
    <stroke
        android:width="2dp"
        android:color="@color/purple_200" /> <!-- Border color and width -->
    <corners android:radius="8dp" /> <!-- Rounded corners -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" /> <!-- Padding for border space -->
</shape>
